{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ recipe.body|raw }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ recipe.duration ? recipe.duration|date("H\\hi\\m") : '' }}</td>
            </tr>
            {% for recipeIngredient in recipe.recipeIngredients %}
                <tr>
                    <th>{{ recipeIngredient.quantity }}</th>
                    <td>{{ recipeIngredient.ingredient }}{% if recipeIngredient.isOptional %}  <b>({{ 'form.optional' | t }})</b>{% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
