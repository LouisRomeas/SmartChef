{% extends 'base.html.twig' %}

{% block title %}{{ 'user.register' | t }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>{{ 'user.register' | t }}</h1>

    {{ form_start(registrationForm, { attr: { class: 'register-form' } }) }}
        {{ form_row(registrationForm.email, {
            label: 'user.email',
            attr: {
                placeholder: 'user.email'
            }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'user.password',
            attr: {
                placeholder: 'user.password'
            }
        }) }}
        {{ form_row(registrationForm.nickname, {
            label: 'user.nickname',
            attr: {
                placeholder: 'user.nickname'
            }
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'user.registration.agreeTerms',
            attr: {
                placeholder: 'user.nickname',
                class: 'checkbox-first'
            }
        }) }}

        <button type="submit" class="btn">{{ 'user.register' | t }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
